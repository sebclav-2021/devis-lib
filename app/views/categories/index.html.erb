<div class="list">
  <div>
    <h1>Vos Prestations</h1>
  </div>
  <br>
  <div class="categories">
    <div class="lists-categories">
      <% @categories.each do |category| %>
        <p>
          <div class="category ">
          <div class="d-flex">
            <h3 class="name">
             <%= category.name %>
            </h3>
            <%= link_to category_path(category), class: 'trash',  method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>
          </div>
          <%= simple_form_for [category, @service] do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :unit %>
            <%= f.submit %>
            <% end %>
          </div>
        </p>
      <% end  %>
    </div>
  </div>

  <div class="new">
    <div class="form">
      <%= simple_form_for(@category) do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
        </div>
        <div class="form-actions">
          <%= f.submit 'Valider'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
