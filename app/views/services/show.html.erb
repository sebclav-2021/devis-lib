<div>
  <h2> <%= @service.category.name %></h2>
</div>

<div>
  <h4><%= @service.name %><%= link_to service_path(@service), class: 'trash',  method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa-regular fa-trash-can"></i>
              <% end %></h4>
  <h5> <%= @service.description %><%= link_to service_path(@service), class: 'trash',  method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa-regular fa-trash-can"></i>
              <% end %></h5>
</div>


<div>
  <% @service.supplies.each do |supply|%>
    <p><%= supply.product.name %></p>
  <% end %>
</div>
<div>
  <h3>Ajouter un produit</h3>
  <%= form_with url: service_supplies_path(@service), method: :post do |form| %>
    <%= form.select :product_id, Product.all.collect {|p| [ p.name, p.id ] } %>
    <%= form.number_field :quantity %>
    <%= form.submit "Ajouter" %>
  <% end %>
</div>
