<h1>Modification des services</h1>

<h2><%= @category.name %></h2>

<div class="new">
  <div class="form">
    <%= simple_form_for([@category, @service]) do |f| %>
      <div class="form-inputs">
        <%= f.input :description %>
        <%= f.input :product, collection: Product.all%>
      </div>
      <div class="form-actions">
        <%= f.submit 'Valider'%>
      </div>
    <% end %>
  </div>
</div>
