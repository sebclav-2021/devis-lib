<div class="title">
  <h1>Créer un client</h1>
</div>

<div class="contour">
  <div class="new">
    <div class="form">
      <%= simple_form_for(@customer) do |f| %>
        <div >
          <%= f.input :name, label: "Prénom et nom", placeholder: "Greg DURAND" %>
          <%= f.input :address, label: "Adresse", placeholder: "21 rue Haxo 13000 Marseille" %>
          <%= f.input :email, label: "E-mail", placeholder: "greg.durand@gmail.com" %>
          <%= f.input :phone, label: "Téléphone", placeholder: "06 60 40 00 99" %>
          <%= hidden_field_tag "from_navbar",  @from_navbar %>
        </div>
<br>
        <div class="form-actions">
          <%= f.submit 'Créer mon client'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
