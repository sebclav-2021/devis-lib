<h3>Créer un produit</h3>
<div>
  <div class="form">
    <%= simple_form_for(@product) do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :unite %>
        <%= f.input :price %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Créez le produit'%>
      </div>
    <% end %>
  </div>
</div>
